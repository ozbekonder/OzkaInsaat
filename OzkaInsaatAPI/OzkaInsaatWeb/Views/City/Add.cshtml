@using OzkaInsaat.Entity.DtoModels;
@model AddCity
<div class="card card-info" style="width:100%;">
    <div class="card-header">
        <h3 class="card-title">Yeni Şehir Ekle</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form asp-action="Add" asp-controller="City" method="post" class="form-horizontal" enctype="multipart/form-data">
        <div class="card-body">
            <div class="form-group row">
                <label asp-for="@Model.CityName" class="col-sm-2 col-form-label">Şehir Adı</label>
                <div class="col-sm-10">
                    <span asp-validation-for="@Model.CityName" class="text-danger"></span>
                    <input type="text" asp-for="@Model.CityName" class="form-control" placeholder="Şehir Adı">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="@Model.CountryName" class="col-sm-2 col-form-label">Ülke adı</label>
                <div class="col-sm-10">
                    <span asp-validation-for="@Model.CountryName" class="text-danger"></span>
                    <input type="text" asp-for="@Model.CountryName" class="form-control" placeholder="Ülke adı">
                </div>
            </div>

        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" asp-action="Add" asp-controller="City" class="btn btn-info">Kaydet</button>
            <button type="submit" asp-action="Index" asp-controller="City"  class="btn btn-default float-right">Vazgeç</button>
        </div>
        <!-- /.card-footer -->
    </form>
</div>
<!-- /.card -->
<!-- /.card -->